<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<fx:root minHeight="250.0" minWidth="200.0" style="-fx-background-color: #8cd5ff; -fx-background-radius: 20 20 20 20; -fx-border-color: #4a7c99; -fx-border-radius: 20 20 20 20; -fx-border-width: 4;" type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Pane prefHeight="5.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox alignment="CENTER" maxHeight="230.0" prefHeight="167.0" prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="imguserbook" fitHeight="66.0" fitWidth="66.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Image/No%20Image.png" />
               </image>
            </ImageView>
            <Separator prefWidth="200.0" />
            <Label text="Book Title :" textFill="WHITE" />
            <Label fx:id="booktitlebook" layoutX="73.0" layoutY="154.0" onMouseEntered="#mouse_enter_booktitlebook" onMouseExited="#mouse_exit_booktitlebook" text="sajdkashk" textFill="#ff9500" wrapText="true">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <Separator prefWidth="200.0" />
            <Label layoutX="73.0" layoutY="137.0" text="Author :" textFill="WHITE" />
            <Label fx:id="authorbookbook" layoutX="76.0" layoutY="150.0" onMouseEntered="#mouse_enter_authorbookbook" onMouseExited="#mouse_exit_authorbookbook" text="sajdkashk" textFill="#ff3300" wrapText="true">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="readbookbookbtn" mnemonicParsing="false" onAction="#readbookbookbtn_pressed" style="-fx-background-color: #664db3;" text="Read" textFill="WHITE" />
                  <Button fx:id="downloadbookbookbtn" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#downloadbookbookbtn_pressed" style="-fx-background-color: #e7502e;" text="Download" textFill="WHITE" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</fx:root>
